<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ALLAPPS.ALLAPPS">

<!--图片轮播效果修改开始【下】-->
    <com.xuexiang.xui.widget.banner.recycler.BannerLayout
        android:id="@+id/bl_horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:bl_autoPlaying="true"
        app:bl_centerScale="0.9"
        app:bl_itemSpace="10dp"
        app:bl_moveSpeed="1.8"
        tools:ignore="MissingConstraints" />
<!--图片轮播效果修改结束【上】-->

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        style="@style/RoundButton.Auto"
        android:id="@+id/btn_JiSuanQi"
        android:layout_marginTop="20dp"
        android:text="计算器"
        android:textColor="@color/black"
        app:rb_backgroundColor="@color/xui_btn_green_normal_color"
        app:rb_borderColor="@color/xui_config_color_red"
        app:rb_radius="20dp"/>
    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        style="@style/RoundButton.Auto"
        android:id="@+id/btn_JiZhangBen"
        android:layout_marginTop="20dp"
        android:text="记账本"
        android:textColor="@color/black"
        app:rb_backgroundColor="@color/xui_btn_green_normal_color"
        app:rb_borderColor="@color/xui_config_color_red"
        app:rb_radius="20dp"/>
    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        style="@style/RoundButton.Auto"
        android:id="@+id/btn_RiJiBen"
        android:layout_marginTop="20dp"
        android:text="日记本"
        android:textColor="@color/black"
        app:rb_backgroundColor="@color/xui_btn_green_normal_color"
        app:rb_borderColor="@color/xui_config_color_red"
        app:rb_radius="20dp"/>

</LinearLayout>